{
  "name": "bloom-sift",
  "version": "0.1.0",
  "description": "Bloom filter with 128-bit MurmurHash3 optimization using Kirsch-Mitzenmacher technique",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src test",
    "format": "prettier --write src test",
    "bench": "tsx bench/index.ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "bloom-filter",
    "bloom",
    "filter",
    "probabilistic",
    "hash",
    "murmur",
    "data-structure"
  ],
  "author": "vnykmshr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vnykmshr/bloom-sift.git"
  },
  "bugs": {
    "url": "https://github.com/vnykmshr/bloom-sift/issues"
  },
  "homepage": "https://github.com/vnykmshr/bloom-sift#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.10",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.10"
  },
  "dependencies": {
    "murmur-hash": "^2.0.0"
  }
}
